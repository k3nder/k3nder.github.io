---
import Blog from "../components/Blog.astro";
import LinkedTitle from "../components/LinkedTitle.astro";
import { getCollection } from "astro:content";

const posts = Object.values(import.meta.glob('../pages/posts/*.md', { eager: true }))

---

<section class="section" >
    <LinkedTitle id="blog" >Blog</LinkedTitle>
    <div class="blogs" > 
        {
            posts.map((post) => (
                <Blog title={post.frontmatter.title} author={post.frontmatter.author} blog={post.url}  />
            ))
        }
    </div>
</section>

<style>
    .blogs {
        display: grid;
        grid-template-rows: repeat(2, 5rem);
        grid-template-columns: repeat(2, 15rem);
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    @media (max-width: 510px) {
        .blogs {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    }
</style>