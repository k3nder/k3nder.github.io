---
import ProjectCard from "../components/projects/ProjectCard.astro"
import LinkedTitle from "../components/LinkedTitle.astro"

const profile = import.meta.glob("../data/profile.config.json", { eager: true })
let data
for (const path in profile) {
  data = profile[path];
}
---

<section class="section" id="projects" >
    {
        data.projects.map((projectGroup) => {
            return ( <LinkedTitle id="">{projectGroup.title}</LinkedTitle>
            <section class="project-group" >
                {
                    projectGroup.projects.map((project) => {
                        return <ProjectCard name={project.title} description={project.description} hrefSource={project.source} hrefView={project.view} image={project.preview} />    
                    })
                }
            </section> )
        })
    }
</section>

<style>
    .project-group {
        display: flex;
        justify-content: center;   
    }
    /* Dispositivos pequeños (móviles) */
@media (max-width: 600px) {
    .project-group {
        display: inline;
    }
}

@media (min-width: 601px) and (max-width: 800px) {
    .project-group {
        display: inline;
    }
}

</style>